@{
}

@{
    ViewData["Title"] = "Listado Trabajo";
}

<div class="row">
    @foreach (var trabajo in (IEnumerable<dynamic>)ViewData["trabajos"])
    {
        
            

        <div class="col-4">
            <div class="card" style="width: 18rem;">
                <img src="@trabajo.imagen" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@trabajo.nombre</h5>
                    <p class="card-text">@trabajo.descripcion</p>
                    <p class="card-text">@trabajo.salario</p>
                    <a asp-action="dtrabajo" asp-route-id="@trabajo.id_trabajo" class="btn btn-success"> Leer mas...</a>
                </div>
            </div>
        </div>
        

    }
</div>

